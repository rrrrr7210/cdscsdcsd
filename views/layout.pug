doctype html
html
  head
    title Képszerkesztő
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='/bower_components/cropperjs/dist/cropper.min.css')
  body
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Képszerkesztő
        ul.nav.navbar-nav
          li
            a(href='/') Főoldal
          li
            a(href='/images') Képek
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/users/logout')
              span.glyphicon.glyphicon-remove
              |  Kijelentkezés
          li
            a(href='/users/register')
              span.glyphicon.glyphicon-user
              |  Regisztráció
          li
            a(href='/users/login')
              span.glyphicon.glyphicon-log-in
              |  Bejelentkezés
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2021
    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
    script(src='/js/cropp.js')
    script(src='/bower_components/cropperjs/dist/cropper.min.js') 
    script(src='https://cdn.jsdelivr.net/gh/ethereumjs/browser-builds/dist/ethereumjs-tx/ethereumjs-tx-1.3.3.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/blob-util/2.0.2/blob-util.min.js', integrity='sha512-QX8zbIM1bENBmyyvWXAO/MnnZ+lMLuIxESquZAGbVR+2MOrvpsnosfgYa9h6EiPq9upqsiBa3ft/r1SP5tLhbA==', crossorigin='anonymous', referrerpolicy='no-referrer')
     
