extends layout
  
block content
  div(class="images-page")
    div(class="header")
      h1 Feltöltött Képek
    
    .images-grid
      each image in items
        div
          img(alt="images" src="data:image/"+image.img.contentType + ";base64," + image.img.data.toString('base64'))
          h5 #{image.author} 
      
    div(class="img-pagination")
    -var n = 1;
    ul.pagination
      while n < page_count+1
        li
          a(href="?page="+n)=n++    